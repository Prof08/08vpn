.settings {
    &__title {
        margin-bottom: 30px;
        font-size: 1.8rem;
        font-weight: 700;
    }

    &__subtitle {
        margin-bottom: 15px;
        cursor: pointer;
        display: flex;
        align-items: center;
    }

    &__group {
        margin-bottom: 50px;

        &:last-child {
            margin-bottom: 0;
        }
    }

    &__group-ico {
        width: 24px;
        height: 24px;
        margin-right: 8px;
        background-repeat: no-repeat;
        background-position: 50%;
        color: var(--brand-primary);
        position: relative;
        top: -1px;
    }

    &__list,
    &__form {
        margin-left: 30px;

        &--disabled {
            pointer-events: none;
            cursor: auto;
            opacity: 0.5;
        }
    }

    &__list-item {
        position: relative;
        width: 100%;
        padding: 8px 8px 8px 15px;

        &:hover,
        &:focus {
            background-color: var(--grayF3);
        }

        &:last-child {
            margin-bottom: 0;
        }
    }

    &__list-remove {
        position: absolute;
        top: 8px;
        right: 8px;
        width: 20px;
        height: 20px;
        background-image: url("../../../assets/images/cross.svg");
        background-repeat: no-repeat;
        background-position: center center;
        border-radius: 3px;

        &:hover,
        &:focus {
            background-color: transparent;
        }
    }

    &__add {
        display: flex;
        align-items: center;
        padding: 10px 15px;
        font-size: 1.2rem;
        font-weight: 700;
        line-height: 1;

        &:focus {
            box-shadow: none;
        }
    }

    &__add-icon {
        margin-right: 12px;
    }
}
