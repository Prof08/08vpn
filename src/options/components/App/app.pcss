.container {
    width: var(--container-width);
    margin: 0 auto;
    padding: 0 15px;
}

.wrapper {
    display: flex;
    min-height: calc(100vh - var(--footer-height));
    padding: 80px 0 95px;
}

.content {
    width: 100%;
    padding-left: 50px;
    border-left: 1px solid var(--border-color);

    &__title {
        margin: 0 0 60px;
        font-size: 3rem;
    }
}
