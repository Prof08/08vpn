    --container-width: 835px;
    --sidebar-width: 250px;
    --footer-height: 98px;
    --footer-background: #53535e;
    --border-color: #d8d8d8;
    --brand-primary: #68bc86;
    --gray-base: #4d4d4d;
    --gray88: #888888;
    --grayF3: #f3f3f3;
