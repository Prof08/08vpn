.warning {
    padding: 25px 25px 25px 70px;
    position: relative;
    color: var(--gray-base);
    font-size: 16px;
    line-height: 22px;
    border-top: 1px solid var(--greyf3);

    &:after {
        content: '';
        position: absolute;
        top: 27px;
        left: 25px;
    }

    &--exclamation {
        &:after {
            width: 30px;
            height: 30px;
            background-image: url(../../../../assets/images/ico-exclamation.svg);
        }
    }
}
