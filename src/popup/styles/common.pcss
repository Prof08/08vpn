* {
    box-sizing: border-box;
}

body {
    min-width: 320px;
    height: 600px;
    margin: 0;
    font-family: var(--font-stack);
}

.content {
    height: 100%;
    display: flex;
    flex-direction: column;
}

.rsm-marker {
    outline: none;
    cursor: pointer;
}

.footer {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    height: 100%;
}

.hidden {
    display: none;
}
